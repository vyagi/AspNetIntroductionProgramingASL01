@model SuperHeroCreateModel
<h3>Add a new superhero</h3>
<form method="post" asp-controller="SuperHero" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Powers"></label>
        <input class="form-control" asp-for="Powers" />
        <span asp-validation-for="Powers" class="text-danger"></span>
    </div>
    <input type="submit" value="Add superhero" />
</form>